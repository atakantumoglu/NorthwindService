{
  "ConnectionStrings": {
    "Database": "Server=localhost\\SQLEXPRESS;Database=Northwind;Trusted_Connection=true;TrustServerCertificate=true"
  },
  "JwtSettings": {
    "ValidIssuer": "NorthwindService",
    "ValidAudience": "NorthwindService Audience",
    "SecretKey": "secretkeysecretkeysecretkeysecretkey"
  },
  "AllowedHosts": "*",
  "DatabaseOptions": {
    "MigrationsAssembly": "NorthwindService.Api",
    "MaxRetryCount": 3,
    "CommandTimeout": 30,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MongoDB" ],
    "MinimumLevel": "Information",
    "Override": {
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "WriteTo": [
      {
        "Name": "MongoDB",
        "Args": {
          "databaseUrl": "mongodb://localhost:27017/NorthwindService",
          "collectionName": "NorthwindService"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "NorthwindService"
    }
  }
}
