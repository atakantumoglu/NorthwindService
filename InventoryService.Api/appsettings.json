  "AllowedHosts": "*",
  "DatabaseOptions": {
    "MigrationsAssembly": "NorthwindService.Api",
    "MaxRetryCount": 3,
    "CommandTimeout": 30,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": true
  }
}
