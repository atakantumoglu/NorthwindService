{
  "ConnectionStrings": {
    "Database": "Server=localhost\\SQLEXPRESS;Database=Northwind;Trusted_Connection=true;TrustServerCertificate=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
